<Application x:Class="TheSSS.DICOMViewer.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainApplicationWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme Resources -->
                <ResourceDictionary Source="Resources/Themes/Theme.Light.xaml"/>
                <ResourceDictionary Source="Resources/Themes/Theme.Dark.xaml"/>
                <ResourceDictionary Source="Resources/Themes/HighContrast.xaml"/>
                
                <!-- Localization Resources -->
                <ResourceDictionary Source="Resources/Languages/Strings.en.xaml"/>
                <ResourceDictionary Source="Resources/Languages/Strings.es.xaml"/>
                
                <!-- Common Styles -->
                <ResourceDictionary Source="Resources/Styles/FluentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>